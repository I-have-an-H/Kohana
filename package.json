{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@i-have-an-h/kohana",
	"version": "0.0.0",
	"private": true,
	"author": {
		"name": "0x1026",
		"url": "https://github.com/0x1026"
	},
	"type": "module",
	"scripts": {
		"build": "tsc --build --clean && tsc --build",
		"deploy": "node --require dotenv/config dist/util/deploy.js",
		"format": "prettier --write . && cross-env TIMING=1 eslint --fix --format=pretty src",
		"lint": "prettier --check . && cross-env TIMING=1 eslint --format=pretty src",
		"prepare": "node .husky/install.mjs",
		"start": "node --require dotenv/config dist/index.js"
	},
	"lint-staged": {
		"*.js, *.json, *.css": "prettier",
		"*.ts": "eslint"
	},
	"dependencies": {
		"@discordjs/core": "^2.0.0",
		"discord.js": "^14.16.3",
		"dotenv": "^16.4.5"
	},
	"devDependencies": {
		"@sapphire/ts-config": "^5.0.1",
		"@types/lodash.merge": "^4.6.9",
		"@types/node": "^22.8.6",
		"cross-env": "^7.0.3",
		"eslint": "^9.14.0",
		"eslint-config-neon": "^0.1.62",
		"eslint-formatter-pretty": "^6.0.1",
		"lint-staged": "^15.2.10",
		"lodash.merge": "^4.6.2",
		"prettier": "^3.3.3",
		"typescript": "~5.6.3",
		"typescript-eslint": "^8.12.2",
		"validate-branch-name": "^1.3.1",
		"zod": "^3.23.8"
	},
	"validate-branch-name": {
		"errorMsg": "Invalid branch name\nEx. [main, dev, feature/feature-info, fix/112-fix-info, chores/chores-info]",
		"pattern": "^(main|dev){1}$|^(chores|feature|fix)/.+$"
	}
}
